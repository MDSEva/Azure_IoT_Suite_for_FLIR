@using GlobalResources
<div class="dashboard_telemetry_history_summary">
    <div id="maxDeviceTemperatureContainer" class="dashboard_telemetry_history_summary__dashboard_telemetry_history_gauge dashboard_telemetry_history_gauge--leftGauge">
        <h5 class="telemetry_summary_gauge_control__gauge_header" id="maxDeviceTemperatureLabel">@Strings.MaxOfDevicesTemperature</h5>
        <div id="maxDeviceTemperature" class="dashboard_telemetry_history_gauge__telemetry_summary_gauge_control"></div>
    </div><div id="minDeviceTemperatureContainer" class="dashboard_telemetry_history_summary__dashboard_telemetry_history_gauge dashboard_telemetry_history_gauge--centerGauge">
              <h5 class="telemetry_summary_gauge_control__gauge_header" id="maxDeviceTemperatureLabel">@Strings.MinOfDevicesTemperature</h5>
        <div id="minDeviceTemperature" class="dashboard_telemetry_history_gauge__telemetry_summary_gauge_control"></div>
    </div>
    <div id="avgDeviceTemperatureContainer" class="dashboard_telemetry_history_summary__dashboard_telemetry_history_gauge dashboard_telemetry_history_gauge--rightGauge">
        <h5 class="telemetry_summary_gauge_control__gauge_header" id="avgDeviceTemperatureLabel">@Strings.AverageOfDeviceTemperature</h5>
        <div id="averageDeviceTemperature" class="dashboard_telemetry_history_gauge__telemetry_summary_gauge_control"></div>
    </div>
</div>
<script src="~/Scripts/Views/Dashboard/TelemetryHistorySummary.js?ver=@Constants.JSVersion"></script>
<script>

    (function () {
        'use strict';

        var telemetryHistorySummarySettings = {
            averageDeviceTemperatureContainer: $('#avgDeviceTemperatureContainer'),
            averageDeviceTemperatureControl: $('#averageDeviceTemperature'),
            averageDeviceTemperatureLabel: $('#avgDeviceTemperatureLabel'),
            gaugeMaxValue: 100,
            gaugeMinValue: 0,
            maxDeviceTemperatureContainer: $('#maxDeviceTemperatureContainer'),
            maxDeviceTemperatureControl: $('#maxDeviceTemperature'),
            maxDeviceTemperatureLabel: $('#maxDeviceTemperatureLabel'),
            minDeviceTemperatureContainer: $('#minDeviceTemperatureContainer'),
            minDeviceTemperatureControl: $('#minDeviceTemperature'),
            minDeviceTemperatureLabel: $('#maxDeviceTemperatureLabel')
        };

        IoTApp.Dashboard.TelemetryHistorySummary.init(telemetryHistorySummarySettings);

        IoTApp.Dashboard.TelemetryHistorySummary.resizeTelemetryHistorySummaryGuages();

        $(window).resize(
            function () {
                IoTApp.Dashboard.TelemetryHistorySummary.resizeTelemetryHistorySummaryGuages();
            });

    })();
</script>
